{
    "name": "rithis/symfony-skeleton",
    "description": "Symfony Skeleton created by Rithis Studio",
    "keywords": ["rithis", "symfony", "skeleton"],
    "homepage": "https://github.com/rithis/symfony-skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Vyacheslav Slinko",
            "email": "vyacheslav.slinko@rithis.com",
            "role": "Founder"
        }
    ],
    "support": {
        "email": "support@rithis.com",
        "issues": "https://github.com/rithis/symfony-skeleton/issues",
        "wiki": "https://github.com/rithis/symfony-skeleton/wiki",
        "source": "https://github.com/rithis/symfony-skeleton"
    },
    "require": {
        "twig/twig": "@stable",
        "doctrine/common": "@stable",
        "monolog/monolog": "@stable",
        "doctrine/dbal": "@stable",

        "symfony/symfony": "2.1.*@stable",
        "symfony/monolog-bundle": "2.1.*@stable",
        "symfony/assetic-bundle": "2.1.*@stable",
        "doctrine/orm": "2.3.*@stable",
        "doctrine/doctrine-bundle": "1.0.*@stable",
        "doctrine/doctrine-fixtures-bundle": "@dev",
        "doctrine/doctrine-migrations-bundle": "@dev",
        "sensio/framework-extra-bundle": "2.1.*@stable"
    },
    "autoload": {
        "psr-0": {
            "Rithis": "src"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "touch app/config/parameters.yml",
            "php app/console cache:clear",
            "php app/console assets:install",
            "php app/console assetic:dump"
        ],
        "post-update-cmd": [
            "touch app/config/parameters.yml",
            "php app/console cache:clear",
            "php app/console assets:install",
            "php app/console assetic:dump"
        ]
    },
    "minimum-stability": "dev"
}
